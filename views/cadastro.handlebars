<form action="/cadastro" method="post">
<div class="card">
    <div class="card-header">
        <h2>Cadastro de Cliente</h2> 
    </div>
    <div class="card-body">
        <div class="mb-3">
            <label for="nome" class="form-label">Nome</label>
            <input name="nome" required type="text" class="form-control" id="nome" placeholder="Digite seu nome..">
        </div>
        <div class="mb-3">
            <label for="data" class="form-label">Data Nascimento</label>
            <input name="data_nascimento"  type="date" class="form-control" id="data"  placeholder="Digite sua data nascimento">
        </div>
            <div class="mb-3">
            <label for="telefone" class="form-label">telefone</label>
            <input name="numero" required type="text" class="form-control" id="numero" placeholder="Digite seu telefone">
        </div>
            <div class="mb-3">
            <label for="cep" class="form-label">CEP</label>
            <input name="cep" required type="number" class="form-control" id="" placeholder="Digite seu CEP">
        </div>
        </div>
            <div class="mb-3">
            <label for="email" class="form-label">EMAIL</label>
            <input name="email" required type="email" class="form-control" id="email" placeholder="Digite seu CEP">
        </div>
        <button class="btn btn-success" type="submit">CADASTRAR CLIENTE </button>
    </div>
</div>
</form>
